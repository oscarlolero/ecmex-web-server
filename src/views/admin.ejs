<!-- Edit modal -->
<div class="edit-modal">
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Editar producto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body m-t-20">
                    <div class="wrap-input100 validate-input" data-validate="Escribe el título">
                        <input class="input100" type="text">
                        <span class="focus-input100" data-placeholder="Título"></span>
                    </div>
                </div>
                <div class="modal-body m-t-20">
                    <div class="wrap-input100 validate-input" data-validate="Escribe la descripción">
                        <textarea cols="10" rows="10" class="input100" type="text"> </textarea>
                        <span class="focus-input100" data-placeholder="Descripción"></span>
                    </div>
                </div>
                <div class="modal-body m-t-20">
                    <div class="wrap-input100 validate-input" data-validate="Escribe el precio">
                        <input class="input100" type="number">
                        <span class="focus-input100" data-placeholder="Precio"></span>
                    </div>
                </div>
                <div class="modal-body m-t-20">
                    <div class="wrap-input100 validate-input" data-validate="Escribe el stock">
                        <input class="input100" type="number">
                        <span class="focus-input100" data-placeholder="Stock"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-edit">Edit</button>
                </div>
            </div>
        </div>
    </div>
