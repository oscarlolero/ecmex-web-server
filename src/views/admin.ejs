<div class="courses">
    <div class="table100 ver3 m-t-10">
        <table data-vertable="ver3">
            <thead>
            <tr class="row100 head">
                <th class="column100 column2">Producto <span title="Add course" data-toggle="modal" data-target="#addModal"><i class="fas fa-plus-circle"></i></span></th>
                <th class="column100 column2">Título</th>
                <th class="column100 column2">Descripción</th>
                <th class="column100 column2">Precio</th>
                <th class="column100 column2">Stock</th>
                <th class="column100 columnAction">Acciones</th>
            </tr>
            </thead>
            <tbody>
            <% products.forEach(function(product) { %>
                <tr class="row100">
                <td class="column100 column1"><img src="<%= product.productData.image %>" class="little-image"></td>
                <td class="column100 column2"><%= product.productData.title %></td>
                <td class="column100 column2"><%= product.productData.description %></td>
                <td class="column100 column2"><%= product.productData.price %></td>
                <td class="column100 column2">2</td>
                <td class="column100 columnAction">
                   <span data-process="edt<%= product.productId %>" title="Editar producto" data-toggle="modal" data-target="#editModal"><i class="fas fa-edit"></i></span>
                   <span data-process="del<%= product.productId %>" title="Eliminar producto"><i class="fas fa-minus-circle"></i></span>
                </td>
            </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>
